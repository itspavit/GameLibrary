<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="300.0" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 8;">
            <Button style="-fx-font-size: 14; -fx-background-color: transparent; -fx-text-fill: #FFFFFF;" text="←" />
            <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" text="Game Chat" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <center>
        <VBox spacing="8" style="-fx-padding: 10;">

            <HBox alignment="CENTER_LEFT" spacing="5">
                <StackPane style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-padding: 5 10 5 10;">
                    <Label style="-fx-text-fill: #000000; -fx-font-size: 12;" text="hello" wrapText="true" />
                </StackPane>
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="5">
                <StackPane style="-fx-background-color: #8B9DC3; -fx-background-radius: 12; -fx-padding: 5 10 5 10;">
                    <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 12;" text="hi" wrapText="true" />
                </StackPane>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <StackPane style="-fx-background-color: #FFFFFF; -fx-background-radius: 12; -fx-padding: 5 10 5 10;">
                    <Label style="-fx-text-fill: #000000; -fx-font-size: 12;" text="bye" wrapText="true" />
                </StackPane>
            </HBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="5" style="-fx-padding: 8;">
            <TextField promptText="Message..." style="-fx-background-radius: 12; -fx-background-color: rgba(255, 255, 255, 0.2); -fx-text-fill: #FFFFFF; -fx-font-size: 12;" HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: #FFFFFF; -fx-font-size: 12;" text="Send" />
        </HBox>
    </bottom>

</BorderPane>

